<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/car_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/item_nome_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Nome"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/car_icon"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/item_marca_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Marca"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_nome_carro"
        app:layout_constraintLeft_toRightOf="@id/car_icon"
        />

    <TextView
        android:id="@+id/item_modelo_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Modelo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_nome_carro"
        app:layout_constraintLeft_toRightOf="@id/item_marca_carro"
        />

    <TextView
        android:id="@+id/item_ano_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Ano"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_nome_carro"
        app:layout_constraintLeft_toRightOf="@id/item_modelo_carro"

        />
    <TextView
        android:id="@+id/item_id_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="ID"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_nome_carro"

        />
</androidx.constraintlayout.widget.ConstraintLayout>