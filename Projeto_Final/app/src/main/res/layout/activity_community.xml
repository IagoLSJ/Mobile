<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fundo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/montanha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <ImageView
        android:id="@+id/icone"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ciclista_64"

        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundo"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguir"
        app:layout_constraintTop_toBottomOf="@id/fundo"
        app:layout_constraintLeft_toRightOf="@id/icone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="24dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/icone"
        app:layout_constraintTop_toBottomOf="@id/icone"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/nome"
        app:layout_constraintTop_toBottomOf="@id/nome"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>