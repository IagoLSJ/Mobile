<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.community.Create_community">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlined_text_input_layout_email"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/outlined_text_input_layout_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nome"
            app:hintTextColor="@color/black"
            app:helperText="helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:boxStrokeColor="@color/verde_limao"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nome_input"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="@color/textColorHighlight" />
            />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descricao"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:theme="@style/EditTextThemeOverlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/black"
            app:helperText="helper"
            app:helperTextTextAppearance="@style/HelperTextAppearance"
            app:boxStrokeColor="@color/verde_limao"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            android:hint="Descrição"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/outlined_text_input_layout_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descricao_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHighlight="@color/textColorHighlight" />
            android:inputType="text"
            />

        </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cria Comunidade"
        android:background="#50e95e"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/descricao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>