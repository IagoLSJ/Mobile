<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="containerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:radius">2dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">50</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/verde_limao</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="msg_error">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/container_msg_error</item>
        <item name="color">@color/msg_error_color</item>
    </style>
</resources>